<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recipe_background"
    android:padding="20dp"
    tools:context=".ui.mainscreen.recipescreen.RecipeFragment">

    <Button
        android:id="@+id/backButton"
        style="@style/RecipeBackAndShareButton"
        android:background="@drawable/ic_back_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sharringButton"
        style="@style/RecipeBackAndShareButton"
        android:background="@drawable/ic_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCardView"
        style="@style/CardViewImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelRecipeTextView">

        <ImageView
            android:id="@+id/imageRecipeImageView"
            android:layout_width="@dimen/recipeImage_size"
            android:layout_height="@dimen/recipeImage_size"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/labelRecipeTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/berkshire_swash"
        android:gravity="center_horizontal"
        android:lines="2"
        android:textColor="#036571"
        android:textSize="@dimen/textSize_label"
        app:layout_constraintEnd_toStartOf="@+id/sharringButton"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cuisineTypeRecipeTextView"
        android:layout_marginTop="@dimen/margin_cuisine_type"
        style="@style/RecipeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCardView" />

    <TextView
        android:id="@+id/caloriesRecipeTextView"
        style="@style/RecipeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cuisineTypeRecipeTextView" />

    <TextView
        android:id="@+id/totalTime_recipe_textView"
        style="@style/RecipeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/caloriesRecipeTextView" />

    <TextView
        android:id="@+id/totalWeightRecipeTextView"
        style="@style/RecipeText"
        app:layout_constraintStart_toStartOf="@id/totalTime_recipe_textView"
        app:layout_constraintTop_toBottomOf="@id/totalTime_recipe_textView" />

    <TextView
        android:id="@+id/ingredientesTextView"
        style="@style/RecipeIngredientsText"
        android:background="#6BFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/totalWeightRecipeTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>